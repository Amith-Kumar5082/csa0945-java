import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num;
        int posSum = 0, posCount = 0;
        int negSum = 0, negCount = 0;

        System.out.println("Enter -1 to exit...");

        while (true) {
            System.out.print("Enter the number: ");
            num = sc.nextInt();

            if (num == -1) break;

            if (num > 0) {
                posSum += num;
                posCount++;
            } else if (num < 0) {
                negSum += num;
                negCount++;
            }
        }

        if (posCount > 0)
            System.out.println("Average of positive numbers: " + (posSum / (double)posCount));
        else
            System.out.println("No positive numbers entered");

        if (negCount > 0)
            System.out.println("Average of negative numbers: " + (negSum / (double)negCount));
        else
            System.out.println("No negative numbers entered");

        sc.close();
    }
}
